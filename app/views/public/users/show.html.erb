<div class="container">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-lg-6 mt-3 justify-content-center">
    <h3 class="back text-center"><strong><%= (@user.nickname) %>さんの会員詳細</strong></h3>
    <table class="table table-borderless text-center">
      <tr>
        <% if @user == current_user %>
        <th>氏名</th>
        <td><%= @user.name %></td>
        <% end %>
      </tr>
      <tr>
        <th>ニックネーム</th>
        <td><%= @user.nickname %></td>
      </tr>
      <tr>
        <% if @user == current_user %>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
        <% end %>
      </tr>
      <tr>
        <th></th>
        <td>
          <% if @user == current_user %>
          <span class="px-8"><%= link_to "編集する", edit_user_path(@user), class:"btn btn-success" %></span>
          <% end %>
        </td>
      </tr>
      </table>
    </div>
    <div class="col-3"></div>
  </div>
</div>

<div class="container">
  <div class="row">
     <div class='col-lg-12 mt-3'>
        <%= render 'public/posts/post_image', posts: @posts %>
      <div class="text-center"><%= paginate @user_posts %></div>
    </div>
  </div>
</div>


