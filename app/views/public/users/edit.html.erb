<div class="container">
  <% if @user.errors.any? %>
    <ul class="alert alert-danger" role="alert">
      <h6 class="alert-heading">
        <%= @user.errors.count %>件のエラーが発生しました
      </h6>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <h3 class="back"><strong><%= @user.nickname %>さんの会員情報編集</strong></h3>
  <div class="row vh-100 mt-5">
    <div class="col-xs-12">
      <% if current_user == User.find_by(params[1]) %>
      <h2><font color="red">ゲストユーザー情報は編集できません。</font></h2>
      <% else %>
      <%= form_with model: @user, url: user_path, local: true, method: :patch do |f| %>
      <div class="col-xs-10">
        <div class="form-group">
          <%= f.label :氏名, class:"col-sm-4 control-label" %>
          <%= f.text_field :name, class:"col-sm-5" %>
        </div>
        <div class="form-group">
          <%= f.label :ニックネーム, class:"col-sm-4 control-label" %>
          <%= f.text_field :nickname, class:"col-sm-5" %>
        </div>
        <div class="form-group">
          <%= f.label :メールアドレス, class:"col-sm-4 control-label" %>
          <%= f.text_field :email, class:"col-sm-5" %>
        </div>
      </div>
      <div class="margin-left">
        <%= f.submit "変更を保存", class:"btn btn-success" %>
      </div>
    <% end %>
    <% end %>
    <%= link_to "退会", confirm_user_url, class:"btn btn-danger ml-5" %>
  </div>
</div>