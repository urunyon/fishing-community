<div class='row'>
  <div class='col-lg-3 mt-3 px-4'>
    <h2 class="text-center">現在の天気情報</h2>
    <%= render 'public/homes/weather' %>
    <h2 class="text-center">ジャンル</h2>
    <%= render 'public/homes/genre', genres: @genres %>
  </div>

  <div class='col-lg-9 mt-3 pr-3'>
    <h2 class="text-center">いいね一覧 (全 <%= @favorite_posts.count %> 件)</h2>
    <div class="text-center">
    <%= render 'public/searches/search' %>
    </div>
    <div class="card-list-container py-5">
      <% @favorite_posts.each do |post| %>
        <div class="card w-50 mx-auto mt-4 shadow-lg">
          <%= link_to post_path(post) do %>
            <%= image_tag post.get_post_image(500, 500), size: "150x300", class:"card-img-top"; %>
          <% end %>
          <div class="card-body">
            <p class="card-title">
              <%= link_to post_path(post) do %>
                <strong><i class="far fa-flag"></i><span> <%= post.title %></span></strong>
              <% end %>
            </p>
            <p class="card-text"><%= post.body %></p>
          </div>
        </div>
      <% end %>
    </div>
    <%= paginate @posts, class: "text-center" %>
  </div>
  

</div>