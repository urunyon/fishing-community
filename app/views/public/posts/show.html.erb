  <div class="row">
    <div class='col-lg-3 mt-3 px-4'>
      <% if @post.errors.any? %>
        <%= @post.errors.count %>件のエラーが発生しました
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <h2 class="text-center">現在の天気情報</h2>
        <%= render 'public/homes/weather' %>
      <h2 class="text-center">ジャンル</h2>
        <%= render 'public/homes/genre', genres: @genres %>
    </div>

    <div class="col-lg-6 mt-3 text-center">
      <h2>投稿詳細</h2>
      <%= image_tag @post.get_post_image(500, 500), size: "300x300", class: "rounded" %>
       <h3>タイトル：<strong><%= @post.title %></strong></h3>
       <p>投稿者：<%= @post.user.nickname %></p>
       <h4>投稿内容</h4>
        <p><%= simple_format(@post.body)%></p>
        <p>
          <% if @post.user == current_user %>
           <%= link_to "投稿編集", edit_post_path(@post) %>
           |
           <%= link_to post_path(@post), method: :delete, data: { confirm: '投稿を削除しますか？' } do %>
            <%= "投稿削除" %>
           <% end %>
          <% end %>
        </P>
      </div>
      <div class="col-lg-3 mt-3 ">
         <% if @post.favorited_by?(current_user) %>
          <p>
            <%= link_to post_favorites_path(@post), method: :delete do %>
              ♥<%= @post.favorites.count %> いいね
            <% end %>
          </p>
          <% else %>
          <p>
            <%= link_to post_favorites_path(@post), method: :post do %>
              ♡<%= @post.favorites.count %> いいね
            <% end %>
          </p>
        <% end %>
        <p>コメント件数：<%= @post.comments.count %></p>
        <div>
        <%= form_with model: [@post, @comment] do |f| %>
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
          <%= f.submit "送信する" %>
        <% end %>
        </div>
        <% @post.comments.each do |comment| %>
          <p><%#= image_tag post_comment.user.get_profile_image(100,100) %></p>
          <p>コメント者：<%= comment.user.nickname %></p>
          <p>コメント日：<%= comment.created_at.strftime('%Y/%m/%d') %></p>
          <P>コメント：<%= comment.comment %></p>
          <% if current_user == comment.user %>
            <%= link_to "削除", post_comment_path(comment.post,comment), method: :delete %>
          <% end %>
        <% end %>
      </div>
    </div>