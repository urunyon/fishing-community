<div class="container">
  <div class="row mx-auto">
    <%= render 'public/homes/genre', genres: @genres %>
    <div class="col-lg-5 mt-4 pl-5 text-center">
      <% if @post.errors.any? %>
        <%= @post.errors.count %>件のエラーが発生しました
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= image_tag @post.get_post_image(500, 500), size: "300x300", class: "rounded" %>
      <div class="col-lg-12 mt-2 pl-1">
       <h3>タイトル：<strong><%= @post.title %></strong></h3>
       <p>投稿者：<%= @post.user.nickname %></p>
       <h4>投稿内容</h4>
        <p><%= simple_format(@post.body)%></p>
        <p>
          <% if @post.user == current_user %>
           <%= link_to post_path(@post), method: :delete do %>
            <%= "投稿削除" %>
           <% end %>
          <% end %>
        </P>
      </div>
      <div>
         <% if @post.favorited_by?(current_user) %>
          <p>
            <%= link_to post_favorites_path(@post), method: :delete do %>
              ♥<%= @post.favorites.count %> いいね
            <% end %>
          </p>
          <% else %>
          <p>
            <%= link_to post_favorites_path(@post), method: :post do %>
              ♡<%= @post.favorites.count %> いいね
            <% end %>
          </p>
        <% end %>
        <p>コメント件数：<%= @post.comments.count %></p>
        <div>
        <%= form_with model: [@post, @comment] do |f| %>
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
          <%= f.submit "送信する" %>
        <% end %>
        </div>
        <% @post.comments.each do |comment| %>
          <p><%#= image_tag post_comment.user.get_profile_image(100,100) %></p>
          <%= comment.user.nickname %>
          <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
          <% if current_user == comment.user %>
            <%= link_to "削除", post_comment_path(comment.post,comment), method: :delete %>
          <% end %>
        <% end %>
      </div>
    </div>
    </div>
  </div>
</div>
