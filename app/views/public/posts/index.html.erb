<div class="container">
  <div class="row">
    <%= render 'public/homes/weather' %>
    <%= render 'public/homes/genre', genres: @genres %>
    <div class="col-lg-10">
      <div class="container">
        <div class="row">

          <% if params[:genre_id] %>
          <h2><%= @genre.genre_name %> 一覧 (全 <%= @posts_all.count %> 件)</h2>
          <% else %>
          <h2>投稿一覧 (全 <%= @posts_all.count %> 件)</h2>
          <% end %>
          
        </div>
        <%= render 'public/posts/post_image', posts: @posts %>
      </div>
    </div>
  <%= paginate @posts, class: "text-center" %>
  </div>
</div>
