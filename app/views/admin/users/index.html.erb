<div class="container">
  <h3 class="back pb-2 text-center pt-3">
    <i class="fa-regular fa-user fa-beat" style="color: #e453af;"></i>
    <strong>会員一覧</strong>
    <i class="fa-regular fa-user fa-beat" style="color: #e453af;"></i>
  </h3>

  <div class="row">
    <table class="table table_bordered", bordercolor="#4FFFB0">
      <thead bgcolor="#4FFFB0">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>ニックネーム</th>
          <th>メールアドレス</th>
          <th>会員ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= link_to (user.name), admin_user_path(user.id) %></td>
            <td><%= user.nickname %></td>
            <td><%= user.email %></td>
            <td>
              <% if user.is_deleted %>
                <p class="text-secondary">退会済</p>
              <% else %>
                <P class="text-success">有効</P>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @users %>
  </div>
</div>

