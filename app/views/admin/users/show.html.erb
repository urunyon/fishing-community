<div class="container">
  <div class="row">
    <div class="col-3"></div>

    <div class="col-lg-6 mt-3 justify-content-center">
      <h3 class="back text-center">
        <strong>
          <i class="fa-regular fa-user fa-flip" style="color: #1b3fd0;"></i>
          <%= (@user.nickname) %>さんの会員詳細
          <i class="fa-regular fa-user fa-flip" style="color: #1b3fd0;"></i>
        </strong>
      </h3>

      <table class="table table-borderless text-center">
        <tr>
          <th>氏名</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>ニックネーム</th>
          <td><%= @user.nickname %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @user.is_deleted %>
              <p class="text-secondary">退会済</p>
            <% else %>
              <P class="text-success">有効</P>
            <% end %>
          </td>
        </tr>
        <tr>
          <th></th>
          <td>
            <span class="px-8">
              <%= link_to "編集する", edit_admin_user_path(@user), class:"btn btn-success" %>
            </span>
          </td>
        </tr>
      </table>
    </div>

    <div class="col-3"></div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class='test-center col-lg-12 mt-5'>
      <h3 class="back text-center">
        <strong>
          <i class="fa-solid fa-pencil fa-shake" style="color: #15479d;"></i>
            <%= (@user.nickname) %>さんの投稿一覧
          <i class="fa-solid fa-pencil fa-shake" style="color: #15479d;"></i>
        </strong>
      </h3>
      <%= render 'public/posts/post_image', posts: @posts %>
      <div class="text-center">
        <%= paginate @user_posts %>
      </div>
    </div>
  </div>
</div>


