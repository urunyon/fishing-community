<div class="container">
  <div class="row">
    <div class="col">
      <div class="mb-5 pl-5">
        <% if @genre.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
              <%= @genre.errors.count %>件のエラーが発生しました
            </h6>
            <% @genre.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <h4><span class="back"><strong>ジャンル一覧・追加</strong></span></h4>
      </div>
      <div class="mb-5">
        <%= form_with model: @genre, url: admin_genres_path do |f| %>
          <div class="mr-5 d-inline-block">ジャンル名</div>
          <div class="mr-5 d-inline-block"><%= f.text_field :genre_name, placeholder: "ジャンル名" %></div>
          <%= f.submit "新規登録", class:"btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <table class="table">
        <thead style="background-color: #f5f5f5;">
          <tr>
            <th class="text-center">ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.genre_name %></td>
              <td class="text-center">
                <%= link_to edit_admin_genre_path(genre.id) do %>
                  <botan class="btn btn-success">編集する</botan>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>